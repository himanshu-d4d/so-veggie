 <section class="plant">
        <div class="row m-0">
          <div class="col-md-7 col-sm-7">
            <div class="left-content">
              <h1>{{entry.plantHeading}}</h1>
              <p>{{entry.plantDescription}}</p>
              <a class="arrow" href="#"><img src="{{siteUrl}}asset/images/arrow-down.png"></a>
            </div>
          </div>
          <div class="col-md-5 col-sm-5 p-0">
            <div class="slider-cont">
              <div class="home-demo">
                <div class="large-12 columns">
                  <div class="owl-carousel">
                   {% for sliderImages in entry.sliderImage.all() %}
                    {% set image = sliderImages.upload.one() %}
                    <div class="item">
                      <div class="inner-cont">
                        <img src={{ image.getUrl() }} />
                        <div class="inner-content">
                        </div>
                      </div>
                    </div>
                   {% endfor %}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </section>