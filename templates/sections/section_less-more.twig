      <h2>{{entry.heading}}</h2>
      <div class="container">
        <div class="row">
          {% for item in entry.items.all() %}
            {% set allItems = item.lessMoreItem   %}
          <div class="col-sm-6">
            <div class="content-list">
              <ul>
                <li>{{allItems}}</li>
              </ul>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </section>

   